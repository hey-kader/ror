<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
      <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
